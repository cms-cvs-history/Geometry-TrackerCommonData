<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<!-- 

== CMS Forward Pixels Geometry ==

 @version 2.02.01 Jan 25, 2006
 @created Victoria Martin
 @modified Dmitry Onoprienko

== COMPONENT DEFINED BY THIS FILE: ==

  2x4 Plaquette.
 (Goes on "right" panels. The version for "left" panels is obtained by rotating by 180 degrees around Z.)
 
 Possitioning this volume:
 XDisp and YDisp are coordinates of the sensor active center in the PixelForwardPlaquette2x4 root frame.

-->

<ConstantsSection label="Input" eval="true">
 <Constant name="ActiveL"           value="32.416*mm"/>
 <Constant name="ActiveW"           value="16.216*mm"/>
 <Constant name="SensorL"           value="34.744*mm"/>
 <Constant name="SensorW"           value="18.544*mm"/>
 <Constant name="PlaquetteL"        value="37.558*mm"/>
 <Constant name="PlaquetteW"        value="27.766*mm"/>
 <Constant name="BumpL"             value="[SensorL]-2.*1.372*mm"/>
 <Constant name="BumpW"             value="[SensorW]-2.*1.222*mm"/>
 <Constant name="ActiveLCentre"     value="19.237*mm"/>
 <Constant name="ActiveWCentre"     value="13.833*mm"/>
</ConstantsSection>
 
<ConstantsSection label="Common" eval="true">
 <Constant name="XDisp"             value="[PlaquetteL]/2.-[ActiveLCentre]"/>
 <Constant name="YDisp"             value="0.*mm"/>
</ConstantsSection>
 
<SolidSection label="pixfwdplaq2x4.xml">
 
 <Box name="PixelForwardPlaquette2x4"      dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:PlaquetteT]/2"/>

 <Box name="PixelForwardSensor2x4"         dx="[SensorL]/2"
      dy="[SensorW]/2"                   dz="[pixfwdplaq:SensorT]/2"/>
 <Box name="PixelForwardActive2x4"         dx="[ActiveW]/2"
      dy="[ActiveL]/2"                   dz="[pixfwdplaq:SensorT]/2"/>
 <Box name="PixelForwardBump2x4"           dx="[BumpL]/2"
      dy="[BumpW]/2"                   dz="[pixfwdplaq:BumpT]/2"/>
 <Box name="PixelForwardAgEpoxy2x4"        dx="[SensorL]/2"
      dy="[SensorW]/2"                   dz="[pixfwdplaq:AgEpoxyT]/2"/>
 
 <Box name="PixelForwardVHDI2x4"           dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:VHDIT]/2"/>
 <Box name="PixelForwardAdhFilm2x4"        dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:AdhFilmT]/2"/>
 <Box name="PixelForwardBacking2x4"        dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:BackingT]/2"/>
 <Box name="PixelForwardChoTherm2x4"       dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:ChoThermT]/2"/>

 <Box name="PixelForwardROChip2x4" dx="[pixfwdplaq:ROChipL]*2." dy="[pixfwdplaq:ROChipW]" dz="[pixfwdplaq:ROChipT]/2."/>

</SolidSection>
 
<LogicalPartSection label="pixfwdplaq2x4.xml">
 <LogicalPart name="PixelForwardPlaquette2x4" category="unspecified">
  <rSolid name="PixelForwardPlaquette2x4"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardSensor2x4" category="unspecified">
  <rSolid name="PixelForwardSensor2x4"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardActive2x4" category="sensitive">
  <rSolid name="PixelForwardActive2x4"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardBump2x4" category="unspecified">
  <rSolid name="PixelForwardBump2x4"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_Bump"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardAgEpoxy2x4" category="unspecified">
  <rSolid name="PixelForwardAgEpoxy2x4"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AgEpoxy"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardVHDI2x4" category="unspecified">
  <rSolid name="PixelForwardVHDI2x4"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_VHDI"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardAdhFilm2x4" category="unspecified">
  <rSolid name="PixelForwardAdhFilm2x4"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AdhFilm"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardBacking2x4" category="unspecified">
  <rSolid name="PixelForwardBacking2x4"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardChoTherm2x4" category="unspecified">
  <rSolid name="PixelForwardChoTherm2x4"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AgEpoxy"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardROChip2x4" category="unspecified">
  <rSolid name="PixelForwardROChip2x4"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
</LogicalPartSection>
 
<PosPartSection label="pixfwdplaq2x4.xml">
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardSensor2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardActive2x4"/>
   <rRotation name="pixfwdplaq:Z90"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardSensor2x4"/>
  <Translation x="[XDisp]" y="[YDisp]" z="[pixfwdplaq:SensorZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardBump2x4"/>
  <Translation x="[XDisp]" y="[YDisp]" z="[pixfwdplaq:BumpZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardAgEpoxy2x4"/>
  <Translation x="[XDisp]" y="[YDisp]" z="[pixfwdplaq:AgEpoxyZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardVHDI2x4"/>
  <Translation x="0." y="0." z="[pixfwdplaq:VHDIZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardAdhFilm2x4"/>
  <Translation x="0." y="0." z="[pixfwdplaq:AdhFilmZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardBacking2x4"/>
  <Translation x="0." y="0." z="[pixfwdplaq:BackingZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="pixfwdplaq2x4:PixelForwardChoTherm2x4"/>
  <Translation x="0." y="0." z="[pixfwdplaq:ChoThermZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rChild name="PixelForwardROChip2x4"/>
  <Translation x="[XDisp]" y="[YDisp]" z="[pixfwdplaq:ROChipZ]" />
 </PosPart>
</PosPartSection>
   
</DDDefinition>
