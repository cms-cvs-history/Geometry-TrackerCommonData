<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<!-- 

== CMS Forward Pixels Geometry ==

 @version 3.01.01 May 08, 2006
 @created Victoria Martin
 @modified Dmitry Onoprienko

== Subsystem or component described by the file ==

2x5 Plaquette.

== Root volume and its reference frame ==

Root volume : PixelForwardPlaquette2x5

Y is in the plane of the plaquette, will be parallel to the panel axis once the plaquette is mounted
Z is perpendicular to the plaquette, pointing to the sensor side

== Positioning ==

The file defines AnchorX and AnchorY constants that 
correspond to the anchor point (aka active center) coordinates in the plaquette
root volume.
<p>
This plaquette should be positioned unrotated into right panels, rotated by
180 degrees into left panels.

== Additional comments ==

The volume representing the active part of the sensor is placed with 90 degrees 
rotation around Z axis to make its local reference frame Y go along the longer side.

-->

<ConstantsSection label="input" eval="true">
 <Constant name="ActiveL"           value="40.516*mm"/>
 <Constant name="ActiveW"           value="16.216*mm"/>
 <Constant name="SensorL"           value="42.844*mm"/>
 <Constant name="SensorW"           value="18.544*mm"/>
 <Constant name="BumpL"             value="[SensorL]-2.*1.372*mm"/>
 <Constant name="BumpW"             value="[SensorW]-2.*1.222*mm"/>
 <Constant name="PlaquetteL"        value="45.658*mm"/>
 <Constant name="PlaquetteW"        value="27.766*mm"/>
 <Constant name="ActiveLCentre"     value="23.287*mm"/>
 <Constant name="ActiveWCentre"     value="13.833*mm"/>
</ConstantsSection>

<ConstantsSection label="Common" eval="true">
 <Constant name="AnchorX"             value="[PlaquetteL]/2.-[ActiveLCentre]"/>
 <Constant name="AnchorY"             value="0.*mm"/>
</ConstantsSection>
 
<SolidSection label="pixfwdplaq2x5.xml">
 
 <Box name="PixelForwardPlaquette2x5"      dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:PlaquetteT]/2"/>

 <Box name="PixelForwardSensor2x5"         dx="[SensorL]/2"
      dy="[SensorW]/2"                   dz="[pixfwdplaq:SensorT]/2"/>
 <Box name="PixelForwardActive2x5"         dx="[ActiveW]/2"
      dy="[ActiveL]/2"                   dz="[pixfwdplaq:SensorT]/2"/>
 <Box name="PixelForwardBump2x5"           dx="[BumpL]/2"
      dy="[BumpW]/2"                   dz="[pixfwdplaq:BumpT]/2"/>
 <Box name="PixelForwardAgEpoxy2x5"        dx="[SensorL]/2"
      dy="[SensorW]/2"                   dz="[pixfwdplaq:AgEpoxyT]/2"/>
 
 <Box name="PixelForwardVHDI2x5"           dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:VHDIT]/2"/>
 <Box name="PixelForwardAdhFilm2x5"        dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:AdhFilmT]/2"/>
 <Box name="PixelForwardBacking2x5"        dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:BackingT]/2"/>
 <Box name="PixelForwardChoTherm2x5"       dx="[PlaquetteL]/2"
      dy="[PlaquetteW]/2"                dz="[pixfwdplaq:ChoThermT]/2"/>

 <Box name="PixelForwardROChip2x5" dx="[pixfwdplaq:ROChipL]*(5./2.)" dy="[pixfwdplaq:ROChipW]" dz="[pixfwdplaq:ROChipT]/2."/>

</SolidSection>
 
<LogicalPartSection label="pixfwdplaq2x5.xml">
 <LogicalPart name="PixelForwardPlaquette2x5" category="unspecified">
  <rSolid name="PixelForwardPlaquette2x5"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardSensor2x5" category="unspecified">
  <rSolid name="PixelForwardSensor2x5"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardActive2x5" category="sensitive">
  <rSolid name="PixelForwardActive2x5"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardBump2x5" category="unspecified">
  <rSolid name="PixelForwardBump2x5"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_Bump"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardAgEpoxy2x5" category="unspecified">
  <rSolid name="PixelForwardAgEpoxy2x5"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AgEpoxy"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardVHDI2x5" category="unspecified">
  <rSolid name="PixelForwardVHDI2x5"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_VHDI"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardAdhFilm2x5" category="unspecified">
  <rSolid name="PixelForwardAdhFilm2x5"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AdhFilm"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardBacking2x5" category="unspecified">
  <rSolid name="PixelForwardBacking2x5"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardChoTherm2x5" category="unspecified">
  <rSolid name="PixelForwardChoTherm2x5"/>
  <rMaterial name="pixfwdMaterials:Pix_Fwd_AgEpoxy"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardROChip2x5" category="unspecified">
  <rSolid name="PixelForwardROChip2x5"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
</LogicalPartSection>
 
<PosPartSection label="pixfwdplaq2x5.xml">
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardSensor2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardActive2x5"/>
   <rRotation name="pixfwdplaq:Z90"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardSensor2x5"/>
  <Translation x="[AnchorX]" y="[AnchorY]" z="[pixfwdplaq:SensorZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardBump2x5"/>
  <Translation x="[AnchorX]" y="[AnchorY]" z="[pixfwdplaq:BumpZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardAgEpoxy2x5"/>
  <Translation x="[AnchorX]" y="[AnchorY]" z="[pixfwdplaq:AgEpoxyZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardVHDI2x5"/>
  <Translation x="0." y="0." z="[pixfwdplaq:VHDIZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardAdhFilm2x5"/>
  <Translation x="0." y="0." z="[pixfwdplaq:AdhFilmZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardBacking2x5"/>
  <Translation x="0." y="0." z="[pixfwdplaq:BackingZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="pixfwdplaq2x5:PixelForwardChoTherm2x5"/>
  <Translation x="0." y="0." z="[pixfwdplaq:ChoThermZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rChild name="PixelForwardROChip2x5"/>
  <Translation x="[AnchorX]" y="[AnchorY]" z="[pixfwdplaq:ROChipZ]" />
 </PosPart>
</PosPartSection>
   
</DDDefinition>
